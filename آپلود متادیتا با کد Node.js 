const { NFTStorage, File } = require('nft.storage');
const fs = require('fs');
const path = require('path');

const API_KEY = 'ØªÙˆÚ©Ù† API Ø´Ù…Ø§ Ø§Ø² NFT.Storage';

async function uploadMetadata() {
  const client = new NFTStorage({ token: API_KEY });

  const metadataFile = fs.readFileSync(path.join(__dirname, 'gamehub-logo-metadata.json'));
  const metadataCID = await client.storeBlob(new File([metadataFile], 'gamehub-logo-metadata.json'));

  console.log('âœ… CID Ù…ØªØ§Ø¯ÛŒØªØ§:', metadataCID);
  console.log('ðŸ”— Ù„ÛŒÙ†Ú© IPFS:', `https://ipfs.io/ipfs/${metadataCID}`);
}

uploadMetadata();